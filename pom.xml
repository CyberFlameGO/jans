<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>io.jans</groupId>
	<artifactId>jans-config-api-parent</artifactId>
	<packaging>pom</packaging>
	<version>1.0.0-SNAPSHOT</version>
	<name>jans-config-api-parent</name>

	<properties>
		<maven.min.version>3.3.9</maven.min.version>
		<maven.assembly.version>3.3.0</maven.assembly.version>
		<maven.compiler.plugin.version>3.8.1</maven.compiler.plugin.version>
		<maven.resources.plugin.version>3.2.0</maven.resources.plugin.version>
		<maven.compiler.parameters>true</maven.compiler.parameters>
		<maven.compiler.source>11</maven.compiler.source>
		<maven.compiler.target>11</maven.compiler.target>
		<surefire-plugin.version>3.0.0-M5</surefire-plugin.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8
		</project.reporting.outputEncoding>
		<guava.version>29.0-jre</guava.version>
		<jackson.version>2.10.1</jackson.version>
		<jackson.databind.version>2.10.1</jackson.databind.version>
		<jans.version>1.0.0-SNAPSHOT</jans.version>
		<jacoco.version>0.8.5</jacoco.version>
		<json-patch-version>1.12</json-patch-version>
		<karate.version>0.9.5</karate.version>
		<jettison.version>1.3.8</jettison.version>
		<jetty.version>9.4.19.v20190610</jetty.version>
		<weld.version>3.1.2.Final</weld.version>
		<log4j.version>2.13.3</log4j.version>
		<slf4j.version>1.7.25</slf4j.version>
